<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/flFrameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".staffArea.StaffTabs">

    <LinearLayout
        android:id="@+id/layProductControls"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/pcControlList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Space
                android:layout_width="63dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/clViewProducts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="View Products" />

            <Space
                android:layout_width="18dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4" />

            <Button
                android:id="@+id/clAddProducts"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Add Products" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pcAddProduct"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".40"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvProductName.0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Product Name:" />

            <LinearLayout
                android:id="@+id/apProductInfo.0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etAddInfo.0"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".40"
                    android:ems="10"
                    android:hint="@string/app_name"
                    android:importantForAutofill="no"
                    android:inputType="textPersonName" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvProductName.1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Category" />

            <LinearLayout
                android:id="@+id/apProductInfo.1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"/>

        </LinearLayout>

    </LinearLayout>
</FrameLayout>